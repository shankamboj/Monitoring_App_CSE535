<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFBFB5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vital Signs Monitoring"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp"
        android:textColor="#2196F3" />

    <!-- Heart Rate Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heart Rate Measurement"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnSelectVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Heart Rate Video"
        android:layout_marginBottom="16dp"
        android:background="#4CAF50"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tvHeartRateResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Heart Rate: Not measured"
        android:textSize="16sp"
        android:layout_marginBottom="32dp"
        android:padding="12dp"
        android:background="#E8F5E8" />

    <!-- Respiratory Rate Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Respiratory Rate Measurement"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnLoadCSV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Load Respiratory Rate CSV Data"
        android:layout_marginBottom="16dp"
        android:background="#FF9800"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tvRespiratoryRateResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Respiratory Rate: Not measured"
        android:textSize="16sp"
        android:layout_marginBottom="32dp"
        android:padding="12dp"
        android:background="#FFF3E0" />

    <!-- Navigation Button -->
    <Button
        android:id="@+id/btnNextToSymptoms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next: Symptoms Logging"
        android:layout_marginTop="20dp"
        android:enabled="false"
        android:background="#2196F3"
        android:textColor="#FFFFFF" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />

</LinearLayout>